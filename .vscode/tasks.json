{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend (FastAPI)",
      "type": "shell",
      "command": "python -m uvicorn app.main:app --reload --host 127.0.0.1 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "build"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend (Vite)",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "build"
      },
      "problemMatcher": []
    },
    {
      "label": "START ALL (Dev)",
      "dependsOn": [
        "Backend (FastAPI)",
        "Frontend (Vite)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}